---
pageable: true
per_page: 8
---

<% page_articles.each_with_index do |article, i| %>

  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <h2><%= link_to article.title, article %></h2>
  <div class="article-date"><%= article.date.strftime('%B %d, %Y') %></div>
  <br />
  <%= article.summary %>
  <span class="read-more"><%= link_to 'read more...', article %></span>
    <hr />
<% end %>

<% if paginate %>
  <% if next_page %>
    <h2 class="next-page"><%= link_to 'Next Page &raquo;', next_page %></h2>
  <% end %>
  <% if prev_page %>
    <h2 class="next-page"><%= link_to '&laquo; Previous Page', prev_page %></h2>
  <% end %>
<% end %>
